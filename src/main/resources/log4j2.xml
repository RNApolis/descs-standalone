<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss} : %m%n" />
			<Filters>
				<ThresholdFilter level="INFO" />
				<ThresholdFilter level="WARN" onMatch="DENY"
					onMismatch="NEUTRAL" />
			</Filters>
		</Console>
		<RollingFile name="FILE" fileName="./descs-standalone.log"
			filePattern="./descs-standalone-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss} : %m%n%throwable{0}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="100KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
			<Filters>
				<ThresholdFilter level="WARN" />
			</Filters>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="org.biojava.nbio.structure" level="error" />
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="FILE" />
		</Root>
	</Loggers>
</Configuration>